{
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "mcp__gemini-research__.*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "echo '{\"event\":\"gemini_tool\",\"tool\":\"'$TOOL_NAME'\",\"status\":\"complete\",\"time\":\"'$(date -Iseconds)'\"}' >> ${CLAUDE_PLUGIN_ROOT}/logs/events.jsonl"
                    }
                ]
            }
        ],
        "SubagentStop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "echo '{\"event\":\"subagent_complete\",\"time\":\"'$(date -Iseconds)'\"}' >> ${CLAUDE_PLUGIN_ROOT}/logs/events.jsonl"
                    }
                ]
            }
        ],
        "UserPromptSubmit": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "mkdir -p ${CLAUDE_PLUGIN_ROOT}/logs 2>/dev/null || true"
                    }
                ]
            }
        ]
    }
}